<% trackers_list = Tracker.all %>
<% projects_list = Project.all %>
<% categories_list = IssueCategory.where(project_id: settings[:next_stage_project_id]) %>

<table class="basecrm-plugin">
  <tbody>
    <tr class="basecrm-tracker">
      <th><%= l(:tracker) %></th>
      <td>
        <%= select_tag "settings[tracker_id]", options_from_collection_for_select(trackers_list, :id, :name, settings[:tracker_id]) %>
      </td>
    </tr>
    <tr class="basecrm-project">
      <th><%= l(:main_project) %></th>
      <td>
        <%= select_tag "settings[main_project_id]", options_from_collection_for_select(projects_list, :id, :name, settings[:main_project_id]) %>
      </td>
    </tr>
    <tr class="basecrm-project">
      <th><%= l(:move_to_project) %></th>
      <td>
        <%= select_tag "settings[next_stage_project_id]", options_from_collection_for_select(projects_list, :id, :name, settings[:next_stage_project_id]) %>
      </td>
    </tr>
    <tr class="basecrm-category">
      <th><%= l(:category) %></th>
      <td>
        <%= select_tag "settings[category_id]", options_from_collection_for_select(categories_list, :id, :name, settings[:category_id]) %>
      </td>
    </tr>
    <tr class="basecrm-omit-when">
      <th><%= l(:omit_when) %></th>
      <td>
        <%= select_tag "settings[omit_project_id]", options_from_collection_for_select(projects_list, :id, :name, settings[:omit_project_id]) %>
      </td>
    </tr>
    <tr class="basecrm-html-tags">
      <th><%= l(:html_tags) %></th>
      <td>
        <%= check_box_tag "settings[html_tags]", 'setting[html_tags]', settings[:html_tags] %>
      </td>
    </tr>
    <tr class="basecrm-token">
      <th><%= l(:base_token) %></th>
      <td>
        <%= text_field_tag "settings[base_token]", settings[:base_token], size: 60 %>
      </td>
    </tr>
    <tr class="basecrm-device-uuid">
      <th><%= l(:device_uuid) %></th>
      <td>
        <%= text_field_tag "settings[device_uuid]", settings[:device_uuid], size: 30 %>
      </td>
    </tr>
  </tbody>
</table>

